.videomodal
    ul.videomodal__list
        li.videomodal__item
            h3(style="text-align: center;font-family: 'Raleway', sans-serif;") Watch the video
                br
                | presentation
        li.videomodal__item
            button.videomodal__btn(type='button' src="//www.youtube.com/embed/YE7VzlLtp-4" data-toggle='modal' data-target='#exampleModal')
                span.videomodal__playbtn &#9656;
            // Modal
            #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            h5#exampleModalLabel.modal-title Video presentation
                            button.close(type='button' data-dismiss='modal' aria-label='Close' )
                                span(aria-hidden='true') &times;
                        .modal-body
                            iframe(id="video", width="100%", height="315px", src="", allow="autoplay", frameborder="0", allowscriptaccess="always", allowfullscreen)


            
